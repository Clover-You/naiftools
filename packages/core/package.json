{
  "name": "@naiftools/core",
  "type": "module",
  "version": "0.0.0",
  "description": "A naive JavaScript utility library",
  "author": "Clover You <cloveryou02@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Clover-You/naiftools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Clover-You/naiftools.git",
    "directory": "packages/core"
  },
  "bugs": "https://github.com/Clover-You/naiftools/issues",
  "keywords": ["utils"],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.cjs"
    }
  },
  "main": "./index.mjs",
  "module": "./index.mjs",
  "types": "./index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./*",
        "./index.d.ts"
      ]
    }
  },
  "files": [
    "*.cjs",
    "*.d.cts",
    "*.d.mts",
    "*.d.ts",
    "*.js",
    "*.mjs"
  ],
  "scripts": {
    "build": "rollup --config=rollup.config.ts --configPlugin=rollup-plugin-esbuild",
    "prepack": "pnpm run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@antfu/ni": "^23.2.0",
    "@antfu/utils": "^8.0.0",
    "@types/node": "^22.10.5",
    "bumpp": "^9.10.0",
    "eslint": "^9.18.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.3.0",
    "pnpm": "^9.15.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
